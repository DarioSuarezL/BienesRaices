extends ../layouts/index.pug

block content
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class='text-center text-2xl font-extrabold')=page

        if errors
            div(class="max-w-md mx-auto my-10" role="alert")
                each error in errors
                    p(class="bg-red-600 text-white text-xs text-center p-2 mb-1 font-bold")=error.msg

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/register")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label(class="block text-sm text-gray-500 mb-2 font-bold" for="name") Nombre
                        input(id="name" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Ingresa tu nombre" type="text" value=old ? old.name : "")

                    div
                        label(class="block text-sm text-gray-500 mb-2 font-bold" for="email") Correo Electrónico
                        input(id="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Ingresa tu correo" type="email" value=old ? old.email : "")
                    
                    div
                        label(class="block text-sm text-gray-500 mb-2 font-bold" for="password") Contraseña
                        input(id="password" name="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Ingresa tu contraseña" type="password")
                    
                    div
                        label(class="block text-sm text-gray-500 mb-2 font-bold" for="confirm_password") Confirmar contraseña
                        input(id="confirm_password" name="confirm_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Confirma tu contraseña" type="password")
                    
                    input(class="block w-full bg-gray-700 text-white p-2 rounded-md hover:bg-gray-600 font-bold cursor-pointer" type="submit" value="Crear cuenta")

                div(class="flex justify-end")
                    a(class="block text-center text-sm mt-5 text-gray-500 hover:text-gray-700 font-bold" href="/auth/login") Iniciar sesión